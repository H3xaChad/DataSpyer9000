<UserControl x:Class="FairDataGetter.Client.UserControl_CustomerSubmit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FairDataGetter.Client"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800">
    
    <Grid Background="DarkGray">
        <Image HorizontalAlignment="Left" Height="100" Margin="10,10,0,0" VerticalAlignment="Top" Width="200"/>
        <TextBox Text="Please review your information and submit,&#xD;&#xA;to recieve all of our benefits!" Background="Transparent" TextAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="25,10,0,0" VerticalAlignment="Top" FontSize="15" Width="300" Height="56"/>

        <Rectangle HorizontalAlignment="Left" Height="1" Margin="105,82,0,0" Stroke="Black" VerticalAlignment="Top" Width="135"/>
        <Border Width="25" Height="25" Background="LightGreen" CornerRadius="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="80,70,0,0" >
            <TextBlock Text="1" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
        <Border Name="SecondStepBorder" Width="25" Height="25" Background="White" CornerRadius="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,70,0,0">
            <TextBlock Text="2" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
        <Border Width="25" Height="25" Background="LightGreen" CornerRadius="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="160,70,0,0">
            <TextBlock Text="3" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
        <Border Width="25" Height="25" Background="LightGreen" CornerRadius="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="200,70,0,0">
            <TextBlock Text="4" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
        <Border Width="25" Height="25" Background="LightBlue" CornerRadius="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="240,70,0,0">
            <TextBlock Text="5" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <Border BorderBrush="Black" BorderThickness="0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="360" Margin="12.5,105,0,0" Width="775" CornerRadius="4" Background="LightGray"/>

        <Label Content="Customer Data" HorizontalContentAlignment="Left" HorizontalAlignment="Left" Margin="20,115,0,0" VerticalAlignment="Top" FontSize="15"/>

        <Label Content="First Name" HorizontalContentAlignment="Left" HorizontalAlignment="Left" Margin="20,155,0,0" VerticalAlignment="Top" FontSize="12"/>
        <Border HorizontalAlignment="Left" Margin="90,155,0,0" VerticalAlignment="Top" Width="180" Height="25" CornerRadius="4" BorderBrush="Gray" BorderThickness="1" Background="White">
            <TextBox Name="CustomerFirstNameTextbox" TextWrapping="Wrap" VerticalContentAlignment="Center" Text="First Name" Background="Transparent" BorderThickness="0"/>
        </Border>

        <Label Content="Last Name" HorizontalContentAlignment="Left" HorizontalAlignment="Left" Margin="20,190,0,0" VerticalAlignment="Top" FontSize="12"/>
        <Border HorizontalAlignment="Left" Margin="90,190,0,0" VerticalAlignment="Top" Width="180" Height="25" CornerRadius="4" BorderBrush="Gray" BorderThickness="1" Background="White">
            <TextBox Name="CustomerLastNameTextbox" TextWrapping="Wrap" VerticalContentAlignment="Center" Text="Last Name" Background="Transparent" BorderThickness="0"/>
        </Border>

        <Label Content="Email" HorizontalContentAlignment="Left" HorizontalAlignment="Left" Margin="20,225,0,0" VerticalAlignment="Top" FontSize="12"/>
        <Border HorizontalAlignment="Left" Margin="90,225,0,0" VerticalAlignment="Top" Width="180" Height="25" CornerRadius="4" BorderBrush="Gray" BorderThickness="1" Background="White">
            <TextBox Name="CustomerEmailTextbox" TextWrapping="Wrap" VerticalContentAlignment="Center" Text="Email" Background="Transparent" BorderThickness="0"/>
        </Border>

        <Label Content="Address" HorizontalContentAlignment="Left" HorizontalAlignment="Left" Margin="20,260,0,0" VerticalAlignment="Top" FontSize="12"/>
        <Border HorizontalAlignment="Left" Margin="90,260,0,0" VerticalAlignment="Top" Width="180" Height="25" CornerRadius="4" BorderBrush="Gray" BorderThickness="1" Background="White">
            <TextBox Name="CustomerAddressTextbox" TextWrapping="Wrap" VerticalContentAlignment="Center" Text="Address" Background="Transparent" BorderThickness="0"/>
        </Border>

        <Label Content="House No." HorizontalContentAlignment="Left" HorizontalAlignment="Left" Margin="20,295,0,0" VerticalAlignment="Top" FontSize="12"/>
        <Border HorizontalAlignment="Left" Margin="90,295,0,0" VerticalAlignment="Top" Width="180" Height="25" CornerRadius="4" BorderBrush="Gray" BorderThickness="1" Background="White">
            <TextBox Name="CustomerHouseNumberTextbox" TextWrapping="Wrap" VerticalContentAlignment="Center" Text="House Number" Background="Transparent" BorderThickness="0"/>
        </Border>

        <Label Content="Postal Code" HorizontalContentAlignment="Left" HorizontalAlignment="Left" Margin="20,330,0,0" VerticalAlignment="Top" FontSize="12"/>
        <Border HorizontalAlignment="Left" Margin="90,330,0,0" VerticalAlignment="Top" Width="180" Height="25" CornerRadius="4" BorderBrush="Gray" BorderThickness="1" Background="White">
            <TextBox Name="CustomerPostalCodeTextbox" TextWrapping="Wrap" VerticalContentAlignment="Center" Text="Postal Code" Background="Transparent" BorderThickness="0"/>
        </Border>

        <Label Content="City" HorizontalContentAlignment="Left" HorizontalAlignment="Left" Margin="20,365,0,0" VerticalAlignment="Top" FontSize="12"/>
        <Border HorizontalAlignment="Left" Margin="90,365,0,0" VerticalAlignment="Top" Width="180" Height="25" CornerRadius="4" BorderBrush="Gray" BorderThickness="1" Background="White">
            <TextBox Name="CustomerCityTextbox" TextWrapping="Wrap" VerticalContentAlignment="Center" Text="City Name" Background="Transparent" BorderThickness="0"/>
        </Border>

        <Label Content="Country" HorizontalContentAlignment="Left" HorizontalAlignment="Left" Margin="20,400,0,0" VerticalAlignment="Top" FontSize="12"/>
        <Border HorizontalAlignment="Left" Margin="90,400,0,0" VerticalAlignment="Top" Width="180" Height="25" CornerRadius="4" BorderBrush="Gray" BorderThickness="1" Background="White">
            <TextBox Name="CustomerCountryTextbox" TextWrapping="Wrap" VerticalContentAlignment="Center" Text="Country Name" Background="Transparent" BorderThickness="0"/>
        </Border>

        <Label Content="Corporate customer?" HorizontalAlignment="Left" Margin="20,435,0,0" VerticalAlignment="Top"/>
        <RadioButton Name="RadioBtn_Yes" Content="Yes" HorizontalAlignment="Left" Margin="150,440,0,0" VerticalAlignment="Top"/>
        <RadioButton Name="RadioBtn_No" Content="No" HorizontalAlignment="Left" Margin="200,440,0,0" VerticalAlignment="Top"/>

        <Label Content="Company Data" HorizontalContentAlignment="Left" HorizontalAlignment="Left" Margin="280,115,0,0" VerticalAlignment="Top" FontSize="15"/>

        <Label Content="Name" HorizontalContentAlignment="Left" HorizontalAlignment="Left" Margin="280,155,0,0" VerticalAlignment="Top" FontSize="12"/>
        <Border Name="CompanyNameBorder" HorizontalAlignment="Left" Margin="350,155,0,0" VerticalAlignment="Top" Width="180" Height="25" CornerRadius="4" BorderBrush="Gray" BorderThickness="1" Background="White">
            <TextBox Name="CompanyNameTextbox" TextWrapping="Wrap" VerticalContentAlignment="Center" Background="Transparent" BorderThickness="0"/>
        </Border>

        <Label Content="Address" HorizontalContentAlignment="Left" HorizontalAlignment="Left" Margin="280,190,0,0" VerticalAlignment="Top" FontSize="12"/>
        <Border Name="CompanyAddressBorder" HorizontalAlignment="Left" Margin="350,190,0,0" VerticalAlignment="Top" Width="180" Height="25" CornerRadius="4" BorderBrush="Gray" BorderThickness="1" Background="White">
            <TextBox Name="CompanyAddressTextbox" TextWrapping="Wrap" VerticalContentAlignment="Center" Background="Transparent" BorderThickness="0"/>
        </Border>

        <Label Content="House No." HorizontalContentAlignment="Left" HorizontalAlignment="Left" Margin="280,225,0,0" VerticalAlignment="Top" FontSize="12"/>
        <Border Name="CompanyHouseNumberBorder" HorizontalAlignment="Left" Margin="350,225,0,0" VerticalAlignment="Top" Width="180" Height="25" CornerRadius="4" BorderBrush="Gray" BorderThickness="1" Background="White">
            <TextBox Name="CompanyHouseNumberTextbox" TextWrapping="Wrap" VerticalContentAlignment="Center" Background="Transparent" BorderThickness="0"/>
        </Border>

        <Label Content="Postal Code" HorizontalContentAlignment="Left" HorizontalAlignment="Left" Margin="280,260,0,0" VerticalAlignment="Top" FontSize="12"/>
        <Border  Name="CompanyPostalCodeBorder" HorizontalAlignment="Left" Margin="350,260,0,0" VerticalAlignment="Top" Width="180" Height="25" CornerRadius="4" BorderBrush="Gray" BorderThickness="1" Background="White">
            <TextBox Name="CompanyPostalCodeTextbox" TextWrapping="Wrap" VerticalContentAlignment="Center" Background="Transparent" BorderThickness="0"/>
        </Border>

        <Label Content="City" HorizontalContentAlignment="Left" HorizontalAlignment="Left" Margin="280,295,0,0" VerticalAlignment="Top" FontSize="12"/>
        <Border  Name="CompanyCityBorder" HorizontalAlignment="Left" Margin="350,295,0,0" VerticalAlignment="Top" Width="180" Height="25" CornerRadius="4" BorderBrush="Gray" BorderThickness="1" Background="White">
            <TextBox Name="CompanyCityTextbox" TextWrapping="Wrap" VerticalContentAlignment="Center" Background="Transparent" BorderThickness="0"/>
        </Border>

        <Label Content="Country" HorizontalContentAlignment="Left" HorizontalAlignment="Left" Margin="280,330,0,0" VerticalAlignment="Top" FontSize="12"/>
        <Border  Name="CompanyCountryBorder" HorizontalAlignment="Left" Margin="350,330,0,0" VerticalAlignment="Top" Width="180" Height="25" CornerRadius="4" BorderBrush="Gray" BorderThickness="1" Background="White">
            <TextBox Name="CompanyCountryTextbox" TextWrapping="Wrap" VerticalContentAlignment="Center" Background="Transparent" BorderThickness="0"/>
        </Border>

        <Label Content="Image" HorizontalContentAlignment="Left" HorizontalAlignment="Left" Margin="540,115,0,0" VerticalAlignment="Top" FontSize="15"/>

        <Label Content="Product Groups" HorizontalContentAlignment="Left" HorizontalAlignment="Left" Margin="540,260,0,0" VerticalAlignment="Top" FontSize="15"/>

        <Image Name="CustomerPictureImage" HorizontalAlignment="Left" Height="115" Margin="547,145,0,0" VerticalAlignment="Top" Width="182"/>
        <TextBlock HorizontalAlignment="Left" Margin="547,295,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="115" Width="180"><Run Text="Product Group 1"/><LineBreak/><Run Text="Product Group 2"/><LineBreak/><Run Text="Product Group 3"/><LineBreak/><Run Text="Product Group 4"/><LineBreak/><Run Text="Product Group 5"/><LineBreak/><Run Text="Product Group 6"/></TextBlock>

        <ListBox Name="CustomerProductGroupsListbox" HorizontalAlignment="Left" VerticalAlignment="Top" Height="125" Width="240" Margin="540,290,0,0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>


        <Border HorizontalAlignment="Left" VerticalAlignment="Top" Margin="540,430,0,0" Width="110"  Height="25" CornerRadius="4" BorderBrush="Gray" BorderThickness="1" Background="White">
            <Button Content="Return" Background="Transparent" Width="120" Height="25" BorderThickness="0" HorizontalAlignment="Center" VerticalAlignment="Center" Click="ReturnButtonClicked"/>
        </Border>
        <Border HorizontalAlignment="Left" VerticalAlignment="Top" Margin="665,430,0,0" Width="110"  Height="25" CornerRadius="4" BorderBrush="Gray" BorderThickness="1" Background="LightBlue">
            <Button Content="Submit" Background="Transparent" Width="120" Height="25" BorderThickness="0" HorizontalAlignment="Center" VerticalAlignment="Center" Click="SubmitButtonClicked"/>
        </Border>

    </Grid>
</UserControl>
