<UserControl x:Class="FairDataGetter.Client.UserControl_CustomerData"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FairDataGetter.Client"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="350">
    
    <Grid Background="DarkGray">
        <Image HorizontalAlignment="Left" Height="100" Margin="10,10,0,0" VerticalAlignment="Top" Width="200"/>
        <TextBlock Text="Please enter your information &#xD;&#xA;to recieve all our benefits!" TextAlignment="Center" HorizontalAlignment="Left" Margin="25,15,0,0" VerticalAlignment="Top" FontSize="15" Width="300" Height="56"/>

        <Rectangle HorizontalAlignment="Left" Height="1" Margin="105,83,0,0" Stroke="Black" VerticalAlignment="Top" Width="135"/>
        <Border Width="25" Height="25" Background="White" CornerRadius="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,70,0,0">
            <TextBlock Text="1" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
        <Border Width="25" Height="25" Background="White" CornerRadius="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="140,70,0,0">
            <TextBlock Text="2" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
        <Border Width="25" Height="25" Background="White" CornerRadius="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="180,70,0,0">
            <TextBlock Text="3" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
        <Border Width="25" Height="25" Background="White" CornerRadius="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="220,70,0,0">
            <TextBlock Text="4" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <Border BorderBrush="Black" BorderThickness="0" HorizontalAlignment="Left" Height="380" Margin="25,106,0,0" VerticalAlignment="Top" Width="300" CornerRadius="4" Background="LightGray"/>

        <Border HorizontalAlignment="Left" Margin="50,120,0,0" VerticalAlignment="Top" Width="250" Height="25" CornerRadius="4" BorderBrush="Gray" BorderThickness="1" Background="White">
            <TextBox Name="CustomerFirstNameTextbox" Text="First Name" TextWrapping="Wrap" VerticalContentAlignment="Center" Background="Transparent" BorderThickness="0" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" Tag="First Name"/>
        </Border>
        <Border HorizontalAlignment="Left" Margin="50,155,0,0" VerticalAlignment="Top" Width="250" Height="25" CornerRadius="4" BorderBrush="Gray" BorderThickness="1" Background="White">
            <TextBox Name="CustomerLastNameTextbox" TextWrapping="Wrap" VerticalContentAlignment="Center" Text="Last Name" Background="Transparent" BorderThickness="0" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" Tag="Last Name"/>
        </Border>
        <Border HorizontalAlignment="Left" Margin="50,190,0,0" VerticalAlignment="Top" Width="250" Height="25" CornerRadius="4" BorderBrush="Gray" BorderThickness="1" Background="White">
            <TextBox Name="CustomerEmailTextbox" TextWrapping="Wrap" VerticalContentAlignment="Center" Text="Email address" Background="Transparent" BorderThickness="0" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" Tag="Email address"/>
        </Border>
        <Border HorizontalAlignment="Left" Margin="50,225,0,0" VerticalAlignment="Top" Width="250" Height="25" CornerRadius="4" BorderBrush="Gray" BorderThickness="1" Background="White">
            <TextBox Name="CustomerAddressTextbox" TextWrapping="Wrap" VerticalContentAlignment="Center" Text="Address" Background="Transparent" BorderThickness="0" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" Tag="Address"/>
        </Border>
        <Border HorizontalAlignment="Left" Margin="50,260,0,0" VerticalAlignment="Top" Width="250" Height="25" CornerRadius="4" BorderBrush="Gray" BorderThickness="1" Background="White">
            <TextBox Name="CustomerHouseNumberTextbox" TextWrapping="Wrap" VerticalContentAlignment="Center" Text="House Number" Background="Transparent" BorderThickness="0" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" Tag="House Number"/>
        </Border>
        <Border HorizontalAlignment="Left" Margin="50,295,0,0" VerticalAlignment="Top" Width="250" Height="25" CornerRadius="4" BorderBrush="Gray" BorderThickness="1" Background="White">
            <TextBox Name="CustomerPostalCodeTextbox" TextWrapping="Wrap" VerticalContentAlignment="Center" Text="Postal Code" Background="Transparent" BorderThickness="0" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" Tag="Postal Code"/>
        </Border>
        <Border HorizontalAlignment="Left" Margin="50,330,0,0" VerticalAlignment="Top" Width="250" Height="25" CornerRadius="4" BorderBrush="Gray" BorderThickness="1" Background="White">
            <TextBox Name="CustomerCityTextbox" TextWrapping="Wrap" VerticalContentAlignment="Center" Text="City" Background="Transparent" BorderThickness="0" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" Tag="City"/>
        </Border>
        <Border HorizontalAlignment="Left" Margin="50,365,0,0" VerticalAlignment="Top" Width="250" Height="25" CornerRadius="4" BorderBrush="Gray" BorderThickness="1" Background="White">
            <TextBox Name="CustomerCountryTextbox" TextWrapping="Wrap" VerticalContentAlignment="Center" Text="Country" Background="Transparent" BorderThickness="0" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" Tag="Country"/>
        </Border>

        <Label Content="Are you a corporate customer?" HorizontalAlignment="Left" Margin="50,400,0,0" VerticalAlignment="Top"/>
        <RadioButton Name="RadioBtn_Yes" Content="Yes" HorizontalAlignment="Left" Margin="250,405,0,0" VerticalAlignment="Top"/>
        <RadioButton Name="RadioBtn_No" Content="No" HorizontalAlignment="Left" Margin="250,425,0,0" VerticalAlignment="Top"/>

        <Border HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,450,0,0" Width="110"  Height="25" CornerRadius="4" BorderBrush="Gray" BorderThickness="1" Background="White">
            <Button Content="Employee Login" Background="Transparent" Width="120" Height="25" BorderThickness="0" HorizontalAlignment="Center" VerticalAlignment="Center" Click="LoginButtonClicked"/>
        </Border>
        <Border HorizontalAlignment="Left" VerticalAlignment="Top" Margin="190,450,0,0" Width="110"  Height="25" CornerRadius="4" BorderBrush="Gray" BorderThickness="1" Background="LightBlue">
            <Button Name="ContinueButton" Content="Continue" Background="Transparent" Width="120" Height="25" BorderThickness="0" HorizontalAlignment="Center" VerticalAlignment="Center" Click="ContinueButtonClicked"/>
        </Border>
    </Grid>
</UserControl>
